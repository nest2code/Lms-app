								<ul class="dropdown-menu drp-mnu"> 
									<li> <a href="#"><i class="fa fa-user"></i> Profile</a> </li> 
									<li> <a href="logout"><i class="fa fa-sign-out"></i> Logout</a> </li>
								</ul>
							</li>
						</ul>
					</div>
							
				     <div class="clearfix"> </div>	
				</div>
<!--heder end here-->
		<ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/user/home">Home</a> <i class="fa fa-angle-right"></i> Edit User</li>
        </ol>
        
        <div class="grid-form1">
            <h3>Edit User : <span text="${userInfo.email"></span></h3>
            <div class="tab-content tab-pane active" id="horizontal-form">
                
                <form class="form-horizontal" action="/manage-users/edit" enctype="multipart/form-data" method="post">
                	
					<div class="form-group">
						<label class="col-sm-4 control-label">First Name :</label>
						<div class="col-sm-6">
							<input type="text" value=<%=user.fName %>  name="fName" placeholder="First Name" class="form-control1" />
						</div>
						
						<label class="alert-danger col-sm-6 col-sm-offset-4" if="${(param.errorField != null) and (param.errorField[0] eq 'firstName')" text="${param.errorMessage[0]" ></label> 
					</div>

					<div class="form-group">
						<label class="col-sm-4 control-label">Last Name :</label>
						<div class="col-sm-6">
							<input type="text" value=<%=user.lName %> name="lName" class="form-control1" />
						</div>
						
						<label class="alert-danger col-sm-6 col-sm-offset-4" if="${(param.errorField != null) and (param.errorField[0] eq 'lastName')" ></label> 
					</div>
					<div class="form-group">
						<label class="col-sm-4 control-label">Upload photo</label>
						<div class="col-sm-6">
							<input type="file" name="photo" placeholder="Email" class="form-control1" />
						</div>
						 
						
					</div>

					<div class="form-group">
						<label class="col-sm-4 control-label">Role</label>
					<div class="col-sm-6">
							<select name="role" class="form-control1">
								<option value="">Select</option>
								<% roles.forEach(role=>{ %>
								<option value=<%=role._id %> > <%=role.name %></option>
								<%})%>
							</select>
						</div>
					</div>
					
					<label class="alert-danger col-sm-6 col-sm-offset-4" if="${(param.errorField != null) and (param.errorField[0] eq 'role')" text="${param.errorMessage[0]"></label>

					<div class="row col-sm-offset-4">
							<button type="submit" style="margin-right: 100px;"class="btn btn-primary">Update</button>
							<a href="/user/manage-users"><button type="button" class="btn btn-default">Cancel</button></a>
					</div>
                </form>              
                
            </div>
         </div>

<!-- script-for sticky-nav -->
