        <div class="grid-form1">
            <h3>Request For Leave</h3>
            <div class="tab-content tab-pane active" id="horizontal-form">
                
                <form class="form-horizontal" action="/user/apply-leave" method="post" object="${leaveDetails">
                	
					<div class="form-group">
						<label class="col-sm-4 control-label">From Date  :</label>
						<div class="col-sm-6">
							<input type="date"  name="fromDate" placeholder="From Date" class="form-control1 leave-date" />
						</div>
						
						<label class="alert-danger col-sm-6 col-sm-offset-4"   ></label> 
					</div>
					<div class="form-group">
						<label class="col-sm-4 control-label">To Date :</label>
						<div class="col-sm-6">
							<input type="date" name="EndDate" placeholder="To Date" class="form-control1 leave-date" />
						</div>
						
						<label class="alert-danger col-sm-6 col-sm-offset-4"></label> 
					</div>
					<div class="form-group">
						<label class="col-sm-4 control-label">Leave Type :</label>
						<div class="col-sm-6">
							<select name="leaveType" class="form-control1">
								<option value="">Select</option>
								<option value="CASUAL LEAVE">CASUAL LEAVE</option>
								<option value="SICK LEAVE">SICK LEAVE</option>
								<option value="OTHER">OTHER</option>
							</select>
						</div>
						
						<label class="alert-danger col-sm-6 col-sm-offset-4" ></label> 
					</div>
					<div class="form-group">
						<label class="col-sm-4 control-label">Leave Reason :</label>
						<div class="col-sm-6">
							<textarea name="reason" placeholder="Leave Reason" class="form-control1" style="height: 100px;"></textarea>
						</div>
						 
						<label class="alert-danger col-sm-6 col-sm-offset-4" if="${#fields.hasErrors('reason')}" errors="*{reason}" ></label>
					</div>

					<div class="form-group">
						<label class="col-sm-4 control-label">Status</label>
						<div class="col-sm-6">
							<select name="status" class="form-control1">
								<option value="">Select</option>
								<option value="PENDING">PENDING</option>
								<option value="APPROVED">APPROVED</option>
								<option value="REJECTED">REJECTED</option>
							</select>
						</div>


					<div class="row">
						<div class="col-sm-8 col-sm-offset-4">
							<button type="submit" class="btn btn-primary">Apply Leave</button>
							<a href="/user/home"><button type="button" class="btn btn-default">Cancel</button></a>
						</div>
					</div>
                </form>              
                
            </div>
